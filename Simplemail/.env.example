# Backend (place in backend/.env or set on the hosting platform)
DB_URL=mongodb+srv://<user>:<password>@cluster0.example.mongodb.net/<dbname>
JWT_SECRET=replace_with_a_strong_random_value
JWT_TIMEOUT=7d
GOOGLE_CLIENT_ID=<google-client-id>
GOOGLE_CLIENT_SECRET=<google-client-secret>

# Frontend (Vite env vars should be prefixed with VITE_)
# Put these in Vercel/Netlify environment variables or a frontend .env when building
VITE_GOOGLE_CLIENT_ID=<google-client-id>
VITE_API_BASE=https://your-backend.example.com
